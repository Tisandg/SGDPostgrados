<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>primefaces.UPLOADER</param-name>
        <param-value>commons</param-value>
    </context-param>
    <filter>
        <filter-name>PrimeFaces FileUpload Filter</filter-name>
        <filter-class>org.primefaces.webapp.filter.FileUploadFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>PrimeFaces FileUpload Filter</filter-name>
        <servlet-name>Faces Servlet</servlet-name>
    </filter-mapping>
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <context-param>
        <param-name>primefaces.THEME</param-name>
        <param-value>redmond</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>faces/index.xhtml</welcome-file>
    </welcome-file-list>
    <error-page>
        <exception-type>javax.ejb.EJBException</exception-type>
        <location>/WEB-INF/error.xhtml</location>
    </error-page>
    <security-constraint>
        <display-name>Estudiante Pages</display-name>
        <web-resource-collection>
            <web-resource-name>Estudiante -</web-resource-name>
            <description>Estudiante - pages</description>
            <url-pattern>/faces/componentes/gestionPublicaciones/ListarPublicaciones_Est</url-pattern>
            <url-pattern>/faces/componentes/gestionPublicaciones/VerPublicacion_Est</url-pattern>
            <url-pattern>/faces/componentes/gestionUsuarios/VerEstudiante_Est</url-pattern>
            <url-pattern>/faces/componentes/gestionPublicaciones/RegistrarPublicacion</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>Estudiante</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>Coordinador Pages</display-name>
        <web-resource-collection>
            <web-resource-name>Coordinador -</web-resource-name>
            <description>Coordinador - pages</description>
            <url-pattern>/faces/componentes/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>Coordinador</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>doctoradoJDBCRealm</realm-name>
        <form-login-config>
            <form-login-page>/index.xhtml</form-login-page>
            <form-error-page>/WEB-INF/error.xhtml</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description>Usuario Profesor</description>
        <role-name>Profesor</role-name>
    </security-role>
    <security-role>
        <description>Usuario Estudiante</description>
        <role-name>Estudiante</role-name>
    </security-role>
    <security-role>
        <description>Usuario Coordinador
</description>
        <role-name>Coordinador</role-name>
    </security-role>
</web-app>
